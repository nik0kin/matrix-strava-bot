{
  "name": "matrix-strava-bot",
  "version": "0.1.0",
  "description": "A chatbot that reports Strava club activities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "// ------ DEVELOPMENT ----- //": "",
    "dev": "nodemon src/bootstrap.ts --dryrun",
    "convert": "ts-jest config:migrate ./jest.config.js",
    "// ------ TESTING ----- //": "",
    "test": "jest --watch",
    "coverage": "jest --collectCoverageFrom=src/**/*.ts --coverage",
    "// ------ BUILDING ----- //": "",
    "build": "tsc --module commonjs",
    "build:watch": "tsc --module commonjs -w",
    "// ------ LINTING ----- //": "",
    "lint": "eslint . --ext .ts",
    "// ------ PRODUCTION ----- //": "",
    "start": "ts-node src/bootstrap.ts"
  },
  "keywords": [
    "Matrix",
    "Bot",
    "Strava"
  ],
  "author": "Nik0kin",
  "license": "GPL-3.0",
  "dependencies": {
    "date-fns": "^2.16.1",
    "matrix-bot-sdk": "^0.5.6",
    "strava-v3": "^2.0.5"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^11.10.5",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "eslint": "^5.15.1",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-prettier": "^3.0.1",
    "jest": "^24.3.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.16.4",
    "ts-jest": "^26.3.0",
    "ts-node": "^8.0.3",
    "typescript": "^3.7.2"
  },
  "files": [
    "dist"
  ]
}