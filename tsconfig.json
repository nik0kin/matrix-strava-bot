{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": [
        "node_modules/*",
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "index.d.ts",
    ],
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    // "strictBindCallApply": true,
    "lib": [
      "es6"
    ]
  },
  "include": [
    "src/**/*"
  ]
}